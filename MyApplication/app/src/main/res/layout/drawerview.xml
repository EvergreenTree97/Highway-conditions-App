<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/drawerView"
    android:background="#5559b4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5356A5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/push"
            android:layout_width="218dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/font"
            android:text="설정"
            android:textColor="#ffffff"
            android:textSize="48dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="220dp"
            android:background="#80ffffff"></LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="248dp"
            android:src="@drawable/gear"></ImageView>

        <Button
            android:id="@+id/button_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="233dp"
            android:text="Push 알림"
            android:textColor="#ffffff"
            android:fontFamily="@font/font"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="290dp"
            android:background="#80ffffff"></LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="315dp"
            android:src="@drawable/gear"></ImageView>

        <Button
            android:id="@+id/button_theme"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="300dp"
            android:text="테마 선택"
            android:fontFamily="@font/font"
            android:textColor="#ffffff"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="360dp"
            android:background="#80ffffff"></LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="386dp"
            android:src="@drawable/gear"></ImageView>

        <Button
            android:id="@+id/button_app"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="372dp"
            android:text="앱 정보"
            android:fontFamily="@font/font"
            android:textColor="#ffffff"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="430dp"
            android:background="#80ffffff"></LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="458dp"
            android:src="@drawable/gear"></ImageView>

        <Button
            android:id="@+id/button_location"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="443dp"
            android:text="위치"
            android:fontFamily="@font/font"
            android:textColor="#ffffff"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"></Button>


    </RelativeLayout>

</LinearLayout>